<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Background" Color="DarkBlue"/>
    <SolidColorBrush x:Key="OnBackground" Color="#121212"/>

    <SolidColorBrush x:Key="PrimaryColor" Color="Blue"/>
    <SolidColorBrush x:Key="OnPrimaryColor" Color="White"/>

    <SolidColorBrush x:Key="SecondaryColor" Color="Yellow"/>
    <SolidColorBrush x:Key="OnSecondaryColor" Color="Black"/>

    <SolidColorBrush x:Key="HeaderColor" Color="DarkBlue"/>
    <SolidColorBrush x:Key="OnHeaderColor" Color="White"/>

    <SolidColorBrush x:Key="ItemColor" Color="LightYellow"/>
    <SolidColorBrush x:Key="OnItemColor" Color="Black"/>

    <SolidColorBrush x:Key="OnHoverItemColor" Color="Black"/>
    <SolidColorBrush x:Key="OnClickItemColor" Color="LightYellow"/>

    <SolidColorBrush x:Key="OnHoverButtonColor" Color="LightYellow"/>
    <SolidColorBrush x:Key="OnClickButtonColor" Color="LightYellow"/>

    <SolidColorBrush x:Key="ExitButtonColor" Color="DarkRed"/>
    <SolidColorBrush x:Key="OnExitButtonColor" Color="LightYellow"/>

    <SolidColorBrush x:Key="MinimizeButtonColor" Color="Yellow"/>
    <SolidColorBrush x:Key="OnMinimizeButtonColor" Color="Black"/>
</ResourceDictionary>