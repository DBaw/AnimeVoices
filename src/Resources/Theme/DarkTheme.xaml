<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="Background" Color="#272537"/>
    <SolidColorBrush x:Key="OnBackground" Color="#E3F4F5"/>
    <SolidColorBrush x:Key="AppTitle" Color="#E3F4F5"/>

    <SolidColorBrush x:Key="SearchTextBox" Color="#353340"/>
    <SolidColorBrush x:Key="OnSearchTextBoxEnabled" Color="#CFCFCF"/>
    <SolidColorBrush x:Key="OnSearchTextBoxDisabled" Color="DarkGray"/>

    <SolidColorBrush x:Key="AnimeItemBackground" Color="#272537"/>
    <SolidColorBrush x:Key="OnAnimeItem" Color="#E3F4F5"/>
    <SolidColorBrush x:Key="ClickAnimeItem" Color="#415761"/>
    <SolidColorBrush x:Key="HoverOnAnimeItem" Color="#547B7F"/>

    <Color x:Key="DefaultButtonBackgroundOne">#49666E</Color>
    <Color x:Key="DefaultButtonBackgroundTwo">#49666E</Color>
    <Color x:Key="HoverOnDefaultButtonOne">#51767A</Color>
    <Color x:Key="HoverOnDefaultButtonTwo">#547B7F</Color>
    <SolidColorBrush x:Key="OnDefaultButton" Color="#F3ECFF"/>

    <SolidColorBrush x:Key="ExitButtonColor" Color="DarkRed"/>
    <SolidColorBrush x:Key="OnExitButtonColor" Color="LightYellow"/>

    <SolidColorBrush x:Key="MinimizeButtonColor" Color="Yellow"/>
    <SolidColorBrush x:Key="OnMinimizeButtonColor" Color="Black"/>
</ResourceDictionary>