<Application x:Class="AnimeVoices.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AnimeVoices"
             StartupUri="MVVM/Views/MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Theme/LightTheme.xaml"/>
                <ResourceDictionary Source="Resources/Theme/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        <SolidColorBrush x:Key="ExitColor" Color="Red"/>
        <SolidColorBrush x:Key="MinimalizeColor" Color="Yellow"/>
            
        </ResourceDictionary>

    </Application.Resources>
</Application>
