<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 d:DesignWidth="710" 
			 d:DesignHeight="460"
             x:Class="AnimeVoices.Views.Content.OverviewView"
			 Background="Transparent">
	<Grid RowDefinitions="100,*,100">
		<!-- Page Titme -->
		<TextBlock Grid.Row="0"
				   Text="SEARCH FROM"
				   FontSize="32"
				   FontWeight="Bold"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"/>
		<!-- Couters -->
		<Grid Grid.Row="1"
			  ColumnDefinitions="*,*,*">
			<!-- Anime -->
			<StackPanel Grid.Column="0"
						Orientation="Vertical"
						VerticalAlignment="Center"
						Spacing="10">
				<Border Height="200"
						Width="200"
						CornerRadius="100"
						Background="#AFB5E7">
					<Border Height="150"
							Width="150"
							CornerRadius="75"
							Background="#2D323D">
						<!-- Counter -->
						<TextBlock Text="{Binding AnimeCount}"
								   FontSize="24"
								   FontWeight="SemiBold"
								   FontStyle="Italic"
								   LetterSpacing="2"
								   Foreground="White"
								   HorizontalAlignment="Center"
								   VerticalAlignment="Center"/>
					</Border>
				</Border>
				<!-- Title -->
				<TextBlock Text="ANIME"
						   LetterSpacing="1"
						   FontSize="26"
						   FontWeight="SemiBold"
						   Foreground="White"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</StackPanel>
			<!-- Character -->
			<StackPanel Grid.Column="1"
						Orientation="Vertical"
						VerticalAlignment="Center"
						Spacing="10">
				<Border Height="200"
						Width="200"
						CornerRadius="100"
						Background="#99A1E0">
					<Border Height="150"
							Width="150"
							CornerRadius="75"
							Background="#2D323D">
						<!-- Counter -->
						<TextBlock Text="{Binding CharacterCount}"
								   FontSize="24"
								   FontWeight="SemiBold"
								   FontStyle="Italic"
								   LetterSpacing="2"
								   Foreground="White"
								   HorizontalAlignment="Center"
								   VerticalAlignment="Center"/>
					</Border>
				</Border>
				<!-- Title -->
				<TextBlock Text="CHARACTERS"
						   LetterSpacing="1"
						   FontSize="26"
						   FontWeight="SemiBold"
						   Foreground="White"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</StackPanel>
			<!-- Seiyuu -->
			<StackPanel Grid.Column="2"
						Orientation="Vertical"
						VerticalAlignment="Center"
						Spacing="10">
				<Border Height="200"
						Width="200"
						CornerRadius="100"
						Background="#787FB0">
					<Border Height="150"
							Width="150"
							CornerRadius="75"
							Background="#2D323D">
						<!-- Counter -->
						<TextBlock Text="{Binding SeiyuuCount}"
								   FontSize="24"
								   FontWeight="SemiBold"
								   FontStyle="Italic"
								   LetterSpacing="2"
								   Foreground="White"
								   HorizontalAlignment="Center"
								   VerticalAlignment="Center"/>
					</Border>
				</Border>
				<!-- Title -->
				<TextBlock Text="SEIYUU"
						   LetterSpacing="1"
						   FontSize="26"
						   FontWeight="SemiBold"
						   Foreground="White"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"/>
			</StackPanel>
		</Grid>
		<Button Grid.Row="2"
				Content="GET MORE"
				Command="{Binding GetMoreDataCommand}"
				Background="#53AA93"
				Foreground="#2D323D"
				FontWeight="Medium"
				Height="50"
				Width="300"
				CornerRadius="25"/>
	</Grid>
</UserControl>
